    </aptitudes>

    <!-- Passion modifiers -->
    <passionMod>
      <skill>Melee</skill>
      <modType>AddOneLevel</modType>
    </passionMod>

    <!-- Custom descriptions -->
    <customEffectDescriptions>
      <li>Overall improved melee</li>
      <li>Can carry a big stick</li>
